local globe = asset.require("../../mars")

local Layer = {
  Identifier = "MOLA_Pseudo_Color_Sweden",
  Name = "MOLA Pseudo Color [Suecia]",
  Enabled = asset.enabled,
  ZIndex = 10,
  FilePath = asset.resource("mola_pseudo_color_sweden.wms"),
  Description = [[Este mapa se basa en datos del Altímetro Láser Orbital de Marte (MOLA)
    (Smith, et al., 2001), un instrumento en la nave espacial Mars Global Surveyor (MGS)
    de la NASA (Albee, et al., 2001). La imagen utilizada para la base de este mapa
    representa más de 600 millones de mediciones recopiladas entre 1999 y 2001,
    ajustadas para consistencia (Neumann, et al., 2001; Neumann, et al., 2003) y
    convertidas a radios planetarios. Estas se han convertido a elevaciones sobre el
    areoide según lo determinado por una solución del campo gravitatorio marciano GMM-2B
    (Lemoine, et al., 2001), truncada al grado y orden 50, y orientada según los
    estándares actuales (ver abajo). La precisión promedio de cada punto es
    originalmente ~100 metros en posición horizontal y ~1 metro en radio (Neumann, et
    al., 2001; Neumann, et al., 2003). Sin embargo, la incertidumbre total de la
    elevación es al menos ±3 m debido al error global en el areoide (±1.8 metros;
    Lemoine, et al., 2001) y las incertidumbres regionales en su forma (Neumann, 2002).
    La resolución de píxeles de este mapa es de 463 metros por píxel (m). (Descripción
    de URL). Referencia de datos: (Ver URL)]]
}

asset.onInitialize(function()
  openspace.globebrowsing.addLayer(globe.Mars.Identifier, "ColorLayers", Layer)
end)

asset.onDeinitialize(function()
  openspace.globebrowsing.deleteLayer(globe.Mars.Identifier, "ColorLayers", Layer)
end)

asset.export("layer", Layer)

asset.meta = {
  Name = "MOLA Pseudo Color [Suecia]",
  Description = [[Datos de elevación coloreados para Marte (con sombreado). Este mapa está
    alojado en el servidor OpenSpace en Suecia]],
  Author = "USGS",
  URL = "https://astrogeology.usgs.gov/search/map/Mars/GlobalSurveyor/MOLA/" ..
    "Mars_MGS_MOLA_ClrShade_merge_global_463m",
  License = "NASA/PDS"
}
