local globe = asset.require("../../moon")

local Layer = {
  Identifier = "Lola_Clr_Shade_Sweden",
  Name = "LRO LOLA Relieve Sombreado en Color 388m v4 [Suecia]",
  Enabled = asset.enabled,
  ZIndex = 100,
  FilePath = asset.resource("lola_clr_shade_sweden.wms"),
  Description = [[Este es un relieve sombreado en color de un modelo digital de elevación
    polar original (DEM) del Altímetro Láser del Orbitador Lunar (LOLA; Smith et al., 2010),
    un instrumento en la nave espacial Orbitador de Reconocimiento Lunar (LRO) de la
    Administración Nacional de Aeronáutica y del Espacio (NASA) (Tooley et al., 2010). El DEM
    es un mapa de forma (radio) de la Luna con una resolución de 100 metros por píxel (m)
    basado en datos de altimetría adquiridos hasta septiembre de 2011 por el instrumento LOLA.
    Las trayectorias terrestres fueron interpoladas utilizando los programas "surface" y
    "grdblend" de Generic Mapping Tools. Los valores del mapa se refieren a un radio de
    1,737,400 m]]
}

asset.onInitialize(function()
  openspace.globebrowsing.addLayer(globe.Moon.Identifier, "ColorLayers", Layer)
end)

asset.onDeinitialize(function()
  openspace.globebrowsing.deleteLayer(globe.Moon.Identifier, "ColorLayers", Layer)
end)

asset.export("layer", Layer)

asset.meta = {
  Name = "Lola Relieve Sombreado en Color [Suecia]",
  Description = [[Capa de relieve sombreado en color de 388m v4 del LRO LOLA para el globo lunar.
    Este mapa está alojado en el servidor de OpenSpace en Suecia]],
  Author = "USGS",
  URL = "https://astrogeology.usgs.gov/search/map/Moon/LMMP/LOLA-derived/Lunar_LRO_LOLA_ClrShade_Global_128ppd_v04",
  License = "NASA/PDS"
}
