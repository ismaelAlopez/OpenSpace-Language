local globe = asset.require("../../earth")



local Name = "Riqueza de Especies - Mamiferos"
local Identifier = "noaa-sos-land-species_richness-mammals"
local Description = [[Comprender la biodiversidad de nuestro planeta es fundamental para
desarrollar estrategias de conservación. Esta serie de conjuntos de datos muestra la biodiversidad de
aves, mamíferos y anfibios. Dicho de manera simple, estos mapas muestran cuántos tipos de aves,
mamíferos o anfibios viven en cada área alrededor del mundo. Estos mapas solo consideran los
animales terrestres y no incluyen animales marinos. También se incluyen mapas correspondientes
de dónde viven las especies amenazadas, aquellas con mayor riesgo de extinción. Saber dónde viven
estas especies amenazadas puede ayudar a dirigir los esfuerzos de conservación para garantizar que
los lugares con las especies más vulnerables estén siendo protegidos]]
local URL = "https://sos.noaa.gov/catalog/datasets/species-richness-mammals/"


local syncedDirectory = asset.resource({
  Name = Name,
  Type = "HttpSynchronization",
  Identifier = Identifier,
  Version = 1
})


local Layer8192 = {
  Identifier = Identifier,
  Name = Name,
  ZIndex = 100,
  FilePath = syncedDirectory .. "8192.png",
  Description = Description
}

local LayerWithBackground = {
  Identifier = Identifier .. "-background",
  Name = Name .. " (con Fondo)",
  ZIndex = 100,
  FilePath = syncedDirectory .. "4096-background.png",
  Description = Description
}

local Labels = {
  Identifier = Identifier,
  Name = Name,
  Type = "ScreenSpaceImageLocal",
  TexturePath = syncedDirectory .. "labels.png",
  FaceCamera = false,
  CartesianPosition = { 0.0, -0.5, -2.0 }
}


asset.onInitialize(function()
  openspace.globebrowsing.addLayer(globe.Earth.Identifier, "ColorLayers", Layer8192)
  openspace.globebrowsing.addLayer(globe.Earth.Identifier, "ColorLayers", LayerWithBackground)
  openspace.addScreenSpaceRenderable(Labels)
end)

asset.onDeinitialize(function()
  openspace.removeScreenSpaceRenderable(Labels)
  openspace.globebrowsing.deleteLayer(globe.Earth.Identifier, "ColorLayers", LayerWithBackground)
  openspace.globebrowsing.deleteLayer(globe.Earth.Identifier, "ColorLayers", Layer8192)
end)

asset.export(Layer8192)
asset.export(LayerWithBackground)
asset.export(Labels)



asset.meta = {
  Name = Name,
  Description = Description .. "Datos proporcionados por la Administración Nacional Oceánica y Atmosférica",
  Author = "Administración Nacional Oceánica y Atmosférica",
  URL = URL,
  License = "https://sos.noaa.gov/copyright/"
}
